@using ComprasDeSupermercado.Controllers
@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Sistema de Compras</title>

    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/InicioRegistro.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/sweetalert2.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <div class="img-margin">
                            <img class="center" src="~/img/logo-1.png" />
                        </div>
                        <form asp-controller="InicioRegistro" asp-action="RegistrarUsuario" method="post">
                            <div class="form-floating mb-3">
                                <input asp-for="NombreUsuario" type="text" class="form-control" id="floatingInput-1" required />
                                <label for="floatingInput-1">Nombre de usuario</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="NombreCompleto" type="text" class="form-control" id="floatingInput-2" required />
                                <label for="floatingInput-2">Nombre completo</label>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-floating">
                                        <input asp-for="CorreoUsuario" type="email" class="form-control" id="floatingPassword-3" required />
                                        <label for="floatingPassword-3">Correo</label>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="form-floating">
                                        <input asp-for="TelefonoUsuario" type="tel" class="form-control" id="floatingPassword-4" required />
                                        <label for="floatingPassword-4">Telefono</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <select asp-for="GeneroUsuario" class="form-select" id="floatingSelect-1">
                                    <option selected>Genero</option>
                                    <option>Maculino</option>
                                    <option>Femenino</option>
                                    <option>Otro</option>
                                </select>
                                <label for="floatingSelect-1">Genero</label>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-floating">
                                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword-1" required />
                                        <label for="floatingPassword-1">Contraseña</label>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="form-floating">
                                        <input name="confirmPassword" type="password" class="form-control" id="floatingPassword-2" required />
                                        <label for="floatingPassword-2">Repetir contraseña</label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-grid m-1 p-1">
                                <button class="btn btn-danger btn-login text-uppercase fw-bold" type="submit">
                                    Registrar
                                </button>
                            </div>
                            <div class="d-grid m-1 p-1">
                                <a asp-controller="InicioRegistro" asp-action="Inicio" class="btn btn-danger btn-login text-uppercase fw-bold">
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
