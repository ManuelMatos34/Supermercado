<!DOCTYPE html>
<html lang="en">
<body>
    <div class="container-table m-3 p-3">
        <div class="col-md-4">
            <a class="btn btn-danger m-1" data-bs-toggle="modal" data-bs-target="#Modal6">
                Agregar Supermercado
            </a>
        </div>
        <h3 class="m-2 p-2">Supermercados</h3>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre Supermercado</th>
                        <th>Direccion</th>
                        <th>Descripcion</th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Supermercado item in ViewBag.SuperMercados)
                    {
                        <tr>
                            <td>@item.NombreSupermercado</td>
                            <td>@item.DireccionSupermercado</td>
                            <td>@item.DescripcionSupermercado</td>
                            <td><button onclick="mostrarSupermercadoActualizar('@item.NombreSupermercado')" class="button-desing btn btn-danger">Actualizar</button></td>
                            <td><a asp-controller="SuperMercados" asp-action="Eliminar" asp-route-id="@item.NombreSupermercado" class="btn btn-danger button-desing">Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="pagination-foot">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Partials/Modals.cshtml");

    <script>
        const supermercadosUrl = '@Url.Action("ListarSupermercados", "SuperMercados")';
        const actualizarUrl = '@Url.Action("Actualizar", "SuperMercados")';
    </script>
</body>
</html>

